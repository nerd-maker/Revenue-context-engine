# Example .env for Unified Revenue Context Engine

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/revenue_context
REDIS_URL=redis://localhost:6379/0
# Kafka (Leave empty to disable - recommended for Railway deployment)
KAFKA_BOOTSTRAP_SERVERS=

# Security (CRITICAL: Generate new values for production!)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<run-openssl-rand-hex-32>
JWT_SECRET=<run-openssl-rand-hex-32>

# Environment
ENV=development

# External APIs (optional in dev)
OPENAI_API_KEY=
OUTREACH_API_KEY=
CLEARBIT_API_KEY=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# Feature flags
EMAIL_DAILY_LIMIT_PER_ACCOUNT=1
HIGH_INTENT_THRESHOLD=75
EXECUTION_MODE=laboratory
ENRICHMENT_BUDGET_PER_ACCOUNT=0.50
ENRICHMENT_BUDGET_PERIOD=monthly
LAB_SIGNAL_REPLAY_DAYS=30
